<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollegeListActivity"
    android:orientation="horizontal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/colzlist_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/fringy_green"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CollegeList"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:id="@+id/toolbar_list"
            android:textSize="25sp"
            />
    </android.support.v7.widget.Toolbar>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listv"
        android:padding="10dp"
        android:background="@drawable/list_selectore_focused"
        android:textAlignment="center"
        android:divider="@color/cutty_green"
        android:dividerHeight="3dp"
        android:layout_below="@+id/colzlist_toolbar" />
</RelativeLayout>
