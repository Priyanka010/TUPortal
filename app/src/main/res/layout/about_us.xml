<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FA8DA">

    <android.support.v7.widget.Toolbar
        android:id="@+id/aboutus_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/fringy_green"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:id="@+id/toolbar_title"
            android:textSize="25dp"
            />
    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="40dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25sp"
        tools:text="This App is developed as a partial fulfillment of the requirements for the Bachelorâ€™s Degree in Computer Science and Information Technology" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="24sp"
        tools:text="Final Year Project By " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        tools:text="Team CSIT Portal" />


</LinearLayout>